<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.name}", user %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to '編集', edit_user_path(user) %>
        </td>
        <td>
          <%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか?' }%>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
